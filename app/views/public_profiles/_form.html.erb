<%= simple_form_for [@user, @public_profile] do |f| %>
    <%= f.input :name, :label => 'Nome' %>
    <%= f.input :professional_registry, :label => 'Número de registro profissional' %>
    <%= f.input :description, :label => 'Descrição do perfil' %>
    <%= f.input :gender, :label => 'Gênero' %>
    <%= f.input :ethnicity, :label => 'Etnicidade' %>
    <%= f.input :age, :label => 'Idade' %>
    <%= f.input :photo, :label => 'Foto' %>
    <%= f.input :has_online_service, :label => 'Realiza atendimento online' %>
    <%= f.input :has_home_service, :label => 'Realiza atendimento domiciliar' %>
    <%= f.input :is_pcd, :label => 'É PCD' %>

    <h2> Especialidades: </h2>
    <%= f.association :specialities %>
    

    <h2> Links: </h2>
    <%= f.simple_fields_for :links do |s| %>
        <%= s.input :link_type, :label => 'Tipo de Link' %>
        <%= s.input :url, :label => 'URL' %>
    <% end %>

    <h2> Linguagens: </h2>
    <%= f.association :languages%>

    <h2> Contatos: </h2>
    <%= f.simple_fields_for :profile_contacts do |s| %>
        <%= s.input :profile_contact_type, :label => 'Tipo de contato' %>
        <%= s.input :profile_contact_value, :label => 'Contato' %>
    <% end %>

    <h2> Horários: </h2>
    <%= f.simple_fields_for :profile_business_hours do |s| %>
        <%= s.input :day, :label => 'Dia' %>
        <%= s.input :open_time, :label => 'Horário de início' %>
        <%= s.input :close_time, :label => 'Horário final' %>
    <% end %>

    <h2> Endereços: </h2>
    <%= f.simple_fields_for :addresses do |s| %>
        <%= s.input :street, :label => 'Rua' %>
        <%= s.input :number, :label => 'Numero' %>
        <%= s.input :complement, :label => 'Complemento' %>
        <%= s.input :district, :label => 'Bairro' %>
        <%= s.input :city, :label => 'Cidade' %>
        <%= s.input :state, :label => 'Estado' %>
        <%= s.input :country, :collection => ['Brazil', 'USA'], :label => 'País' %>
    <% end %>

    <%= f.submit %>
<% end %>